package Labtask2;

public class IfElse {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int age = 40;
		if (age>23) {
			System.out.println("Age is Grater than 23");
			
		}
		else 
			System.out.println("Age is Grater than 40");

	}

}


