package Labtask2;

public class OddEven {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		int number = 20;
		
		if(number%2==0){
			System.out.println("Number is Even");
		}else{
			System.out.println("Number is Odd");
		}
	}
}




