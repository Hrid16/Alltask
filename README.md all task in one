package Labtask2;

public class ForLoop {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		for (int i=2;i<=3; i++) {
			for (int j=2;j<=4; j++) {
				System.out.println(i+" "+j);
				
				
			}
		}
	}

}


